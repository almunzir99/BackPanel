{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Overrides": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name":"File",
        "Args":{
          "path":"logs/log-.txt",
          "rollingInterval":"Day",
          "rollOnFileSizeLimit":true,
          "formatter":"Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich":["FromLogContext","WithMachineName","WithThreadId"]
  }
}
